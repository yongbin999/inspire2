<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/login.css' />
<link rel='stylesheet' href='/stylesheets/style.css' />
	<link rel="import" href='/header.html'>
  </head>

  <body>
<div id="header"></div>
  <script>
    var link = document.querySelector('link[rel="import"]'); // this is located in /public folder
    // Clone the <template> in the import.
    var template = link.import.querySelector('template');
    var clone = document.importNode(template.content, true);
    document.querySelector('#header').appendChild(clone);
  </script>



<div id ="content">
<div class = "login">
<h3>Welcome to the <%= title %></h3>
<i>
-studentid: test, <br>
-adminid: admin pass:admin	
</i>	
<p><div><%= message %></div></p>

    <form method="post" action="/auth">
      <input type="text"  placeholder="Username" name="username"> <br>
      <input type="password" placeholder="Password" name="password"> <br>
	Admin User?:<input type="checkbox" name="isadmin" value ="true"> <br>
      <button>Login</button>
    </form>
    </div>
</div>
  </body>
</html>